@model List<Rod.Services.Vo.PostVo>

@{
    ViewBag.Title = "Strona główna";
}

<div class="home body-content">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="img-fluid d-block w-100" src="~/Content/images/s1.jpg?auto=yes" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="img-fluid d-block w-100" src="~/Content/images/s2.jpg?auto=yes" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="img-fluid d-block w-100" src="~/Content/images/s3.jpg?auto=yes" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="links">
        <div class="container">
            <div>
                <h1 class="title">Oficjalna strona Rod Okrzei</h1>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <a href="/News/All" class="panel">
                        <img src="~/Content/images/news.png" class="img-fluid" />
                        <h2>Aktualności</h2>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/Home/Managements" class="panel">
                        <img src="~/Content/images/managements.png" class="img-fluid" />
                        <h2>Zarząd</h2>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/Documents/All" class="panel">
                        <img src="~/Content/images/documents.png" class="img-fluid" />
                        <h2>Regulamin</h2>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/Home/Contact#address" class="panel">
                        <img src="~/Content/images/maps.png" class="img-fluid" />
                        <h2>Adres</h2>
                    </a>
                </div>
            </div>

        </div>
    </div>
    <div class="news">
        <div class="container">
            <div>
                <h1>Najnowsze ogłoszenia</h1>
            </div>
            <div class="page-news">
                @foreach (var post in Model)
                {
                    @Html.Partial("_Post", post)
                }
            </div>

        </div>

    </div>
</div>

